@model IEnumerable<string>

@foreach (var link in Model)
{
    @Html.RouteLink(link, new
{
    controller = "Product",
    action = "List",
    category = ViewBag.SelectedCategory,
        system = link,
        page = 1
    },
    new { @class = "btn btn-block btn-default btn-lg" + (link == ViewBag.SelectedSystem ? " btn-primary" : "") })
}
